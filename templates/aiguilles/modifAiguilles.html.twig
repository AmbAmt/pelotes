{% extends 'base.html.twig' %}

{% block title %}modification aiguille{% endblock %}

{% block body %}
<main>
    <div class="circle1"></div>
    <div class="circle2"></div>
<!--Conteneur des cards-->
    <!--<form action="" class="form-pelote">-->
        {{form_start(form)}}
        <a href="{{path("aiguilles")}}" id="cancel">
            <div class="cancel">
                <div class="cross-cancel"></div>
            </div>
        </a> 
        <h1>Modification de l'aiguille</h1>
            <ul>
                <li class="input">{{form_row(form.taille)}}</li>
                <li class="input">{{form_row(form.typeAiguilles)}}</li>
                <li class="input">{{form_row(form.marque)}}</li>
                <li class="input">{{form_row(form.quantite)}}</li>
                <li class="input">{{form_row(form.prix)}}</li>                
            </ul>
        <button type="submit" class="btn-submit">Valider</button>
    {{form_end(form)}}
</main>
{% endblock %}